bool downstream_message_queue_empty(struct cudainterval_message_iterator *interval_dispatch_iter)
{
    cudainterval_callbacks_state* state = (cudainterval_callbacks_state*) interval_dispatch_iter->callbacks_state;
    return state->downstream_message_queue.empty();
}

size_t downstream_message_queue_size(struct cudainterval_message_iterator *interval_dispatch_iter)
{
    cudainterval_callbacks_state* state = (cudainterval_callbacks_state*)  interval_dispatch_iter->callbacks_state;
    return state->downstream_message_queue.size();
}

const bt_message* downstream_message_queue_pop(struct cudainterval_message_iterator *interval_dispatch_iter)
{
    cudainterval_callbacks_state* state = (cudainterval_callbacks_state*) interval_dispatch_iter->callbacks_state;
    const bt_message* m = state->downstream_message_queue.front();
    state->downstream_message_queue.pop();
    return m;
}


