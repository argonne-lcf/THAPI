<% case be
   when "opencl"
     event = "event"
     prof_end = "end"
     mulfactor = 1
     profiled_call = "clEnqueueSVMFree"
     backend = 2
     kernel_function_name = "solver"
   when "ze"
     event = "hEvent"
     prof_end = "globalEnd"
     mulfactor = 1
     profiled_call = "zeCommandListAppendBarrier"
     backend = 1
     kernel_function_name = "solver"
   when "cuda"
     event = "hStop"
     prof_end = "milliseconds"
     mulfactor = 1000000
     profiled_call = "cuLaunchKernel"
     backend = 3
     kernel_function_name = "solver"
   end %>

in:
  :hostname: aurora12.gov
  :default_stream: stream0
  :stream_classes:
  - :name: stream_class
    :schemas:
    - thapi_<%= be %>
    :clock_snapshot_value: true
    :common_context:
    - :name: vpid
      :class: signed
    - :name: vtid
      :class: unsigned
  :streams:
  - :name: stream0
    :class: stream_class
  :events:
  <% if be == "cuda" %>
  - :name: lttng_ust_cuda:cuCtxCreate_entry
  - :name: lttng_ust_cuda:cuCtxCreate_exit
  - :name: lttng_ust_cuda:cuModuleGetFunction_entry
    :payload:
      name_val: <%= kernel_function_name %>
  - :name: lttng_ust_cuda:cuModuleGetFunction_exit
    :payload:
      hfunc_val: 11
  <% end %>
  - :name: lttng_ust_<%= be %>:<%= profiled_call %>_entry
    :clock_snapshot_value: 0
    :payload:
      f: 11
  - :name: lttng_ust_<%= be %>_profiling:event_profiling
    :payload:
      <%= event %>: 12
  - :name: lttng_ust_<%= be %>:<%= profiled_call %>_exit
    :clock_snapshot_value: 3
  - :name: lttng_ust_<%= be %>_profiling:event_profiling_results
    :payload:
      <%= event %>: 12
      <%= prof_end %>: 10
ref:
  :default_stream: stream0
  :stream_classes:
  - :name: interval_class
    :schemas:
    - thapi_interval
    :common_context:
    - :name: hostname
      :class: string
    - :name: vpid
      :class: signed
    - :name: vtid
      :class: unsigned
    - :name: ts
      :class: unsigned
    - :name: backend
      :class: signed
  :streams:
  - :name: stream0
    :class: interval_class
  :events:
  <% if be == "cuda" %>
  - :name: lttng:host
    :common_context:
      hostname: aurora12.gov
      backend: <%= backend %>
    :payload:
      name: cuCtxCreate
      dur: 1

  - :name: lttng:host
    :common_context:
      hostname: aurora12.gov
      backend: <%= backend %>
      ts: 2
    :payload:
      name: cuModuleGetFunction
      dur: 1
  <% end %>
  - :name: lttng:host
    :common_context:
      hostname: aurora12.gov
      backend: <%= backend %>
    :payload:
      name: <%= profiled_call %>
      dur: 3
  - :name: lttng:device
    :common_context:
      hostname: aurora12.gov
      backend: <%= backend %>
    :payload:
      name: <%= kernel_function_name %>
      dur: <%= 10 * mulfactor %>
